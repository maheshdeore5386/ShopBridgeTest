@model IEnumerable<ShopBridgeMvc.Models.mvcItem>

@{
    ViewBag.Title = "Index";
}

<br />

<p>
    @*@Html.ActionLink("Create New", "Create")*@
    <a href="@Url.Action("Add", "Item")" class="btn btn-default">Create New</a>
</p>
<table class="table table-striped">
    <thead class="table-heading">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>Action</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
        @Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    @*<a onclick="Delete(@item.Id)" class="btn btn-default">Delete</a>*@
                </td>
            </tr>

        }
    </thead>
</table>

@section scripts{
    <script>
        $(function () {
            var successMessage = '@TempData["SuccessMessage"]';
            if (successMessage != '')
                alertify.success(successMessage);
        });

        function Delete(id) {
            alertify.confirm('ShopBridge Test', 'Are you sure to Delete this Record?', function () {
                window.location.href = '@Url.Action("Delete","Item")/' + id;
            }, null);
        }
    </script>
    }